<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--//declaration-->
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>com.recap.FirstServlet</servlet-class>
    </servlet>
    <!--//mapping-->
    <servlet>
        <servlet-name>fourthServlet</servlet-name>
        <servlet-class>com.recap.fourthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>first</servlet-name>
        <url-pattern>/first</url-pattern>
    </servlet-mapping>
    <!--//declaration of secondServlet-->
    <servlet>
        <servlet-name>second</servlet-name>
        <servlet-class>com.recap.SecondServlet</servlet-class>
    </servlet>
    <!--//mapping-->
    <servlet-mapping>
        <servlet-name>second</servlet-name>
        <url-pattern>/second2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>third</servlet-name>
        <servlet-class>com.recap.ThirdServlet</servlet-class>
    </servlet>
    <!--//mapping-->
    <servlet-mapping>
        <servlet-name>third</servlet-name>
        <url-pattern>/third3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fourthServlet</servlet-name>
        <url-pattern>/four4</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
