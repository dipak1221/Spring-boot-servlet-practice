<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-class>com.demo.servlet1</servlet-class>
        <servlet-name>servlet_1</servlet-name>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>servlet_1</servlet-name>
        <url-pattern>/one</url-pattern>
    </servlet-mapping>
    
    <!--servlet 2 mapping-->
    <servlet>
        <servlet-class>com.demo.servlet2</servlet-class>
        <servlet-name>servlet_two</servlet-name>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet_two</servlet-name>
        <url-pattern>/two</url-pattern>
    </servlet-mapping>
    
    <!--servlet 3 mapping-->
    <servlet>
        <servlet-name>servlet_three</servlet-name>
        <servlet-class>com.demo.servlet3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet_three</servlet-name>
        <url-pattern>/three</url-pattern>
    </servlet-mapping>
    
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
